<Window x:Class="Urfu_Shedule_Parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Urfu_Shedule_Parser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="73*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="List_Box" Grid.Column="0" Margin="10,10,10,10">
            <ListBoxItem>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <TextBlock x:Name="DateString" Text="{Binding DateString}"/>
                            <TextBlock x:Name="Duration" Text="{Binding Duration}"/>
                            <TextBlock x:Name="Chamber"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock x:Name="Discipline" Text="{Binding Discipline}"/>
                            <TextBlock x:Name="Teacher_name"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBoxItem>
        </ListBox>
        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="5,5,5,5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="10">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                    <Label Content="Институт:" Margin=" 10" HorizontalAlignment="Center"/>
                    <ComboBox x:Name="Institute_ComboBox" Margin="15,0,15,0" Width="100"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                    <Label Content="Группа:" Margin=" 10, 10, 10, 10" HorizontalAlignment="Center"/>
                    <TextBox x:Name="Group_Number_TextBox" Margin="15,0,15,0" HorizontalAlignment="Stretch" Width="100"/>
                </StackPanel>

            </StackPanel>

            <Button Click="Start_Parse_Button_Click" x:Name="Start_Parse_Button" Content="start" Width="80" Height="25" Margin="10,50,10,0"/>
        </StackPanel>

    </Grid>
</Window>
