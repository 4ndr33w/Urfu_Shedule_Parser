<Window x:Class="Urfu_Shedule_Parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Urfu_Shedule_Parser"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="288"/>
        </Grid.ColumnDefinitions>
        <TabControl>
            <TabItem Header="DataGrid">
                <DataGrid x:Name="Grid_Data">
                </DataGrid>
            </TabItem>
            <TabItem Header="ListBox">
                <ListBox x:Name="List_Box" Grid.Column="0" Margin="10,10,10,10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock  x:Name="DateString"  Text="{Binding DateString}"/>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Name="Duration" Text="{Binding Duration}" Foreground="Black" FontSize="10" Background="LightGray"/>
                                        <TextBlock x:Name="Chamber" Text="{Binding Chamber}" Foreground="Black" FontSize="10"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock x:Name="Discipline" Text="{Binding Discipline}"/>
                                        <TextBlock x:Name="Teacher_name"/>
                                    </StackPanel>
                                </StackPanel>
                            </DockPanel>

                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
        </TabControl>




        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="5,5,5,5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="10">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                    <Label Content="Институт:" Margin=" 10" HorizontalAlignment="Center"/>
                    <TextBox x:Name="Institute_TextBox" Margin="15,0,15,0" Width="100"/>

                </StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                    <Label Content="Группа:" Margin=" 10, 10, 10, 10" HorizontalAlignment="Center"/>
                    <TextBox x:Name="Group_Number_TextBox" Margin="15,0,15,0" HorizontalAlignment="Stretch" Width="100"/>
                </StackPanel>

            </StackPanel>

            <Button Click="Start_Parse_Button_Click" x:Name="Start_Parse_Button" Content="start" Width="80" Height="25" Margin="10,50,10,0"/>
            <Button x:Name="show_result_Button" Click="show_result_Button_Click" Margin="10, 50, 10, 0" Width="80" Height="25" Content="Show"/>
            <Button x:Name="clear_table_Button" Click="clear_table_Button_Click" Margin="10, 50, 10, 0" Width="80" Height="25" Content="Clear"/>
        </StackPanel>

    </Grid>
</Window>
